	public String list(){
		return "item";
	}
	
	@RequestMapping(value="listData")
	@ResponseBody
	public Result listData(){
		int page=this.getInt("page",0);
		int pageSize=this.getInt("pageSize",15);
		
		return ResultUtil.success();
	}
	
	

}
